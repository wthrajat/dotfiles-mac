# cmd - tab : : "


# cycle forwards on the focused display
# id="$()"
cmd - tab :  yabai -m space --focus "$(yabai -m query --spaces --display | jq 'sort_by(.index) | reverse | .[map(."has-focus") | index(true) - 1].index')"

